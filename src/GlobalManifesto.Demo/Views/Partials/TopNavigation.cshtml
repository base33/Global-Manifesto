@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
	IPublishedContent topNavigationSource = GlobalManifesto.Products.Helpers.ContentLocationHelper.GetLocalRoot(Model.Content);
    var topNavigationLinks = topNavigationSource.GetPropertyValue<RJP.MultiUrlPicker.Models.MultiUrls>("topNavigationLinks");
}

<nav id="secondary-nav" role="navigation">
    @loadLinks(topNavigationLinks)
</nav>

@helper loadLinks(RJP.MultiUrlPicker.Models.MultiUrls links)
{
    if (links != null && links.Any())
    {
        foreach (var link in links)
        {
            <a href="@link.Url" target="@link.Target">@link.Name</a>
        }
    }
}
